package progKurzus;

import java.util.ArrayList;
import java.util.List;

public class App {

	public static void main(String[] args) {
		
		String fajlNev = "kurzus.txt";
		List<Tanulok> tanulok = new ArrayList<Tanulok>();
		FajlKezelo fk = new FajlKezelo();
		ProgKurzus feladatObj = new ProgKurzus();
		
		tanulok = fk.fajlBeolvas(fajlNev);
		
		System.out.println("3. feladat:");
		System.out.println("\tA tanfolyamra " + feladatObj.beiratkozottFo(tanulok) + " fõ iratkozott be.");
		System.out.println("4. feladat:");
		System.out.print("\tFiúk átlagteljesítménye: ");
		System.out.printf("%.2f", feladatObj.atlagNemSzerint(tanulok, "m"));
		System.out.println();
		System.out.println("\tLányok\t átlagteljesítménye:\t" + feladatObj.atlagNemSzerint(tanulok, "f") + "%");
		
		
	}

}
