package progKurzus;

import java.util.ArrayList;
import java.util.List;

public class App {

	public static void main(String[] args) {
		
		String fajlNev = "kurzus.txt";
		List<Tanulok> tanulok = new ArrayList<Tanulok>();
		FajlKezelo fk = new FajlKezelo();
		ProgKurzus feladatObj = new ProgKurzus();
		
		int honap = 5;
		
		tanulok = fk.fajlBeolvas(fajlNev);
		
		System.out.println("3. feladat:");
		System.out.println("\tA tanfolyamra " + feladatObj.beiratkozottFo(tanulok) + " fõ iratkozott be.");
		System.out.println("4. feladat:");
		System.out.println("\tFiúk átlagteljesítménye: " + String.format("%.2f", feladatObj.atlagNemSzerint(tanulok, "m")) + "%");
		System.out.println("\tLányok átlagteljesítménye: " + String.format("%.2f", feladatObj.atlagNemSzerint(tanulok, "f")) + "%");
		System.out.println("5. feladat");
		System.out.println("\tA következõ diákoknak van tandíjelmaradása:");
		feladatObj.fizetesselElmaradtTanulokKiir(tanulok, honap);

		
		
	}

}
